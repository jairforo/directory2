subtitle:
	label: Subtitle
	type: text
	default: ""

featuredItem:
	label: Item Featured
	type: on-off
	default: true
	capabilities: true

headerType:
	label: Item Header
	type: select
	selected: map
	default:
		none: No header
		map: Map
		image: Image
	capabilities: true
	help: "Select type of header on page"

- section(id: 'headerType-image', title: 'Image Options', capabilities: true)

headerImage:
	label: Header Image
	type: image
	default: ""
	help: "Image displayed in header"

headerHeight:
	label: Header Height
	type: number
	default: ""
	unit: px

#headerImageAlign:

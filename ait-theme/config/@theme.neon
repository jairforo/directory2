general:
	title: General
	options:

		layoutType:
			label: Layout Type
			type: image-radio
			checked: layout-wide
			images:
				layout-wide: layout-wide.png
				layout-narrow: layout-narrow.png
			default:
				layout-wide: Wide Layout
				layout-narrow: Narrow Layout

		websiteWidth:
			label: Website Width
			type: range
			unit: px
			min: 1000
			max: 1800
			step: 50
			default: 1300

		leftSidebarWidth:
			label: Left Sidebar Width
			type: range
			unit: %
			min: 10.0
			max: 30.0
			step: 0.1
			default: 20.6

		rightSidebarWidth:
			label: Right Sidebar Width
			type: range
			unit: %
			min: 10.0
			max: 30.0
			step: 0.1
			default: 25.8

		sidebarGap:
			type: variable
			default: 4.4

		progressivePageLoading:
			label: Progressive Page Loading
			type: on-off
			default: off

		- section(title: 'Main Theme Colors and Backgrounds')

		favicon:
			label: Favicon
			type: image
			default: "/design/img/favicon.png"

		mainbg:
			label: Website Background
			type: background
			default:
				color: '#ffffff'
				opacity: 100%
				image: ''
				repeat: no-repeat
				position: top center
				scroll: scroll
			required: true

		pageBgColor:
			label: Page Background
			type: color
			default: '#ffffff'
			opacity: 100%
			required: true

		titColor:
			label: Titles
			type: color
			default: '#333333'
			required: true

		txtColor:
			label: Text
			type: color
			default: '#777777'
			required: true

		lnkColor:
			label: Links
			type: color
			default: '#1d70a3'
			required: true

		hvrColor:
			label: Links Hover
			type: color
			default: '#00578c'
			required: true

		decColor:
			label: Decoration
			type: color
			default: '#1d70a3'
			required: true

		secdecColor:
			label: Second Decoration
			type: color
			default: '#89cf34'
			required: true

		featuredColor:
			label: Featured Items Color
			type: color
			default: '#ffcc00'
			required: true
			help: "Decorative Color for the Featured Items"

		linesColor:
			label: Lines
			type: color
			opacity: 10%
			default: '#000000'
			required: true

		lightObj:
			label: Lighter Objects
			type: color
			default: '#000000'
			opacity: 4%
			required: true

		darkObj:
			label: Darker Objects
			type: color
			default: '#666666'
			opacity: 100%
			required: true

